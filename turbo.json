{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env", "**/.env.*local"],
	"globalEnv": [
		"NEXT_PUBLIC_ROOT_URL",
		"NEXT_PUBLIC_API_URL",
		"MONGO_URI",
		"NEXT_PUBLIC_API_KEY",
		"NEXT_PUBLIC_AUTH_DOMAIN",
		"NEXT_PUBLIC_PROJECT_ID",
		"NEXT_PUBLIC_STORAGE_BUCKET",
		"NEXT_PUBLIC_MESSAGING_SENDER_ID",
		"NEXT_PUBLIC_APP_ID",
		"FIREBASE_PROJECT_ID",
		"FIREBASE_PRIVATE_KEY",
		"FIREBASE_CLIENT_EMAIL",
		"PORT"
	],
	"tasks": {
		"start": {
			"dependsOn": ["^build"],
			"cache": true
		},
		"build": {
			"outputs": ["build/**", ".next/**", "!.next/cache/**"],
			"dependsOn": ["^build"]
		},
		"test": {
			"outputs": ["coverage/**"],
			"dependsOn": []
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"update": {
			"cache": false
		}
	}
}
